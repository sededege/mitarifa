<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "MiTarifa.tienda"
        versionCode = "10"
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>Mi tarifa</name>

    <description>
        Mi tarifa
    </description>

    <author href="https://sebastiangonzalez.uy" email="sebagonzalez_97@hotmail.com">
        Sebastian Gonzalez
